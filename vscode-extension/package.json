{
  "name": "wat-lsp",
  "displayName": "WebAssembly Text Format (WAT) Language Support",
  "description": "Language Server Protocol support for WebAssembly Text Format (.wat files)",
  "version": "0.1.1",
  "publisher": "EmNudge",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/EmNudge/wat-lsp"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "wasm",
    "webassembly",
    "wat",
    "lsp",
    "language-server"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "wat",
        "aliases": [
          "WebAssembly Text",
          "wat"
        ],
        "extensions": [
          ".wat",
          ".wast"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "WAT LSP Configuration",
      "properties": {
        "watLsp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "watLsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to the WAT LSP server binary. Leave empty to use the bundled binary."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "build:server": "cd .. && cargo build --release",
    "copy:server": "mkdir -p ./server && cp ../target/release/wat-lsp-rust ./server/wat-lsp-rust || cp ../target/release/wat-lsp-rust.exe ./server/wat-lsp-rust.exe"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.3"
  }
}
