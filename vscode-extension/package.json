{
  "name": "wat-lsp",
  "displayName": "WebAssembly Text Format (WAT) Language Support",
  "description": "Language Server Protocol support for WebAssembly Text Format (.wat files)",
  "version": "0.1.3",
  "publisher": "EmNudge",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/EmNudge/wat-lsp"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "wasm",
    "webassembly",
    "wat",
    "lsp",
    "language-server"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "watLsp.toggle",
        "title": "WAT LSP: Toggle Language Server"
      }
    ],
    "languages": [
      {
        "id": "wat",
        "aliases": [
          "WebAssembly Text",
          "wat"
        ],
        "extensions": [
          ".wat",
          ".wast"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wat",
        "scopeName": "source.wat",
        "path": "./syntaxes/wat.tmLanguage.json"
      }
    ],
    "semanticTokenModifiers": [
      {
        "id": "controlFlow",
        "description": "Control flow keywords"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "wat",
        "scopes": {
          "comment": ["comment.wat"],
          "string": ["string.quoted.double.wat"],
          "number": ["constant.numeric.wat"],
          "type": ["entity.name.type.wat"],
          "type.defaultLibrary": ["entity.name.type.wat"],
          "function": ["entity.name.function.wat"],
          "function.definition": ["entity.name.function.wat"],
          "variable": ["variable.other.wat"],
          "variable.definition": ["variable.other.wat"],
          "keyword": ["storage.type.wat"],
          "keyword.controlFlow": ["keyword.control.wat"],
          "operator": ["keyword.operator.word.wat"],
          "namespace": ["support.class.wat"],
          "parameter": ["variable.parameter.wat"],
          "property": ["variable.other.local.wat"]
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "WAT LSP Configuration",
      "properties": {
        "watLsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the WAT language server."
        },
        "watLsp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "watLsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to the WAT LSP server binary. Leave empty to use the bundled binary."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run copy:queries && tsc -p ./",
    "copy:queries": "mkdir -p ./grammars/queries && cp ../tree-sitter-wasm/queries/highlights.scm ./grammars/queries/",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "build:server": "cd .. && cargo build --release",
    "copy:server": "mkdir -p ./server && cp ../target/release/wat-lsp-rust ./server/wat-lsp-rust || cp ../target/release/wat-lsp-rust.exe ./server/wat-lsp-rust.exe"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "tree-sitter": "^0.21.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.3"
  }
}
